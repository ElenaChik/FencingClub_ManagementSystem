<Window x:Class="FancingClubManagementSystemProject.View.Inventory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FancingClubManagementSystemProject.View"
        mc:Ignorable="d"
        Title="Inventory" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_ManageUsers">
                <MenuItem Header="_ManageMember" />
                <MenuItem Header="_ManageCoach" />
                <Separator />
                <MenuItem Header="_MemberList" />
            </MenuItem>
            <MenuItem Header="_CampRegistration">
            </MenuItem>
            <MenuItem Header="_Inventory">
            </MenuItem>
            <MenuItem Header="_Attendance">
            </MenuItem>
        </Menu>
        <TextBox AcceptsReturn="True" />

        <Grid>
            <Label x:Name="InventoryLabel" Content="Inventory" HorizontalAlignment="Center" Height="35" Margin="0,60,0,0" VerticalAlignment="Top" Width="102" FontSize="18" FontWeight="Bold"/>
            <DataGrid x:Name="inventoryTable"  Margin="98,147,107,85"/>
        </Grid>
    </DockPanel>
</Window>
